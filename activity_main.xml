<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="27.3dp"
            android:gravity="center"
            android:letterSpacing="-0.04"
            android:lineSpacingExtra="0sp"
            android:textColor="#2d2c45"
            android:textSize="20dp"
            tools:text="흐릿하게 보이는 신호등
진동과 소리로 알려드려요." />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17.3dp"
            android:background="@drawable/shadow"
            app:srcCompat="@android:drawable/sym_def_app_icon" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:letterSpacing="-0.07"
            android:lineSpacingExtra="0sp"
            android:textColor="#71747b"
            android:textSize="15dp"
            tools:text="시각장애・색맹・노안" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:letterSpacing="-0.07"
            android:background="@drawable/top"
            android:lineSpacingExtra="-0.3dp"
            android:textColor="#868b97"
            android:textSize="15dp"
            tools:text=" 흐릿흐릿 어려운 신호확인,
모두의 신호등이 도와드릴게요" />

        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginTop="30dp"



            android:text="다음" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>










